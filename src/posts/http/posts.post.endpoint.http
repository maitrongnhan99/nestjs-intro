### Create a new post
POST http://localhost:3000/posts
Content-Type: application/json
Authorization: Bearer token

{
  "title": "Sample Post Title",
  "slug": "sample-post-slug",
  "postType": "post",
  "status": "draft1",
  "content": "This is the content of the sample post. It can contain markdown or other formatting.",
  "schema": "{}",
  "featuredImageUrl": "https://example.com/image.jpg",
  "publishOn": "2025-03-12T00:00:00.000",
  "tags": ["sample", "test", "example"],
  "metaOptions": [
    {
      "key": "description",
      "value": "Meta description for SEO purposes"
    },
    {
      "key": "keywords",
      "value": "sample,test,api"
    }
  ]
}

